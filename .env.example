# Database Configuration
# For Supabase, use format: postgresql://user:password@host:port/database
# Make sure the password is URL-encoded if it contains special characters
DATABASE_URL="postgresql://postgres:password@db.example.supabase.co:5432/postgres"

# JWT Secrets - Change these to secure random values in production
ACCESS_TOKEN_SECRET="your-super-secret-access-token-key-here"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-here"

# Token Expiration
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server Configuration
PORT=5002
NODE_ENV=development

# CORS - Update these for your deployment
CLIENT_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3001

# Stripe Integration
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx
